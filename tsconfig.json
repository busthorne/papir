{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"moduleDetection": "force",
		"isolatedModules": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "emitDeclarationOnly": true,
		"types": [
			"svelte"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte"
	],
	"references": [{"path": "./tsconfig.node.json"}]
}